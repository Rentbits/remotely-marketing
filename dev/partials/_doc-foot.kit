  <script>
  $(document).ready(function() {

    $('#learn-more-form').on('click', 'input.submit', function() {
      var $thisForm = $('form.learn-more-form');
      var isValid   = $thisForm.validate();

      if (isValid) {
        $.post("remotely/contactRequest", $thisForm.serialize(), function(response) {
          // TODO...
          $thisForm[0].reset();

          var target = $('.call-to-action');
          $('.thank-you-message').addClass('show');
          $('#to-be-hidden').css('opacity', '0');
          $('html,body').animate({
            scrollTop: target.offset().top
          }, 300);

        });
      }
      return false;
    });

  });
  </script>
</body>
